# Sway headless configuration for game streaming
output HEADLESS-1 {
    mode __WIDTH__x__HEIGHT__@__REFRESH__Hz
    scale 1
}

bar {
    mode invisible
    tray_output none
}

# Blue background to verify stream capture is working
output * bg #000080 solid_color

# Start Steam inside Gamescope
# Gamescope provides the "Steam Deck" environment that Steam Big Picture prefers.
# Sunshine captures the whole Sway "desktop".
# HDR is enabled if STREAM_HDR is true
exec gamescope -W __WIDTH__ -H __HEIGHT__ -r __REFRESH__ -f __HDR_ARGS__ -- steam -bigpicture

# Key bindings
bindsym Mod4+Return exec foot
bindsym Mod4+Shift+q kill
bindsym Mod4+Shift+e exit

# Input configuration
input * {
    accel_profile flat
}
